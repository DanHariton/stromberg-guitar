{% extends 'site/layout.html.twig' %}

{% block title %}Artists{% endblock %}

{% block body %}
    {% include 'site/app/_component/header.html.twig' %}
    {% include 'site/app/_component/page_title.html.twig' with {title: 'site.artists.title'|trans} %}

    <div class="container mt-5" data-aos="fade-up">
        <div class="row">
            {% for artist in artists %}
            <div class="col-12 col-lg-6 mb-4">
                <a href="{{ path('site_app_artist', {'artist': artist.id}) }}">
                    <h2>{{ artist.name }}</h2>
                    {% if artist.files[0] is defined %}
                    <img class="img-full" src="{{ asset(imageAssets ~ artist.files[0].fileName) }}" alt="{{ artist.name }}">
                    {% endif %}
                </a>
            </div>
            {% endfor %}
        </div>

        <a href="{{ path('site_app_index') }}" class="underlined">{{ 'site.post.back'|trans }}</a>
    </div>

    {% include 'site/app/_component/footer.html.twig' %}
{% endblock %}