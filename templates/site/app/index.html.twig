            <div id="tab-contact-distributors" class="bg-light-dark item fade">
                <div class="row">
                    <div class="col-12 p-5">
                        <div class="p-xl-5">
                            <h3 class="mb-5">{{ 'site.index.contactMenu.contactDistTab.contact'|trans }}</h3>
                            <div class="row">
                                <div class="col-12 col-lg-8">
