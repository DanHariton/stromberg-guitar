                                        {{ 'site.index.contactMenu.contactDistTab.telephone'|trans }} <a class="default-underline text-xs" href="tel:+49 (0)9366 99979">+49 (0)9366 99979</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'site/app/_component/footer.html.twig' %}

{% endblock %}