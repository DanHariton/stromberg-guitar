{% extends 'admin/components/layout.html.twig' %}

{% block title %}Změna zboží{% endblock %}

{% block content %}
    <h1 class="h3 mb-2 text-gray-800">
        Změnit zboží ID - {{ merch.id }}
        {% if merch.enabled %}
            <span class="badge badge-success">Publikováno</span>
        {% else %}
            <span class="badge badge-warning">Skryto</span>
        {% endif %}
    </h1>

    {% include 'admin/components/flashes.html.twig' %}

    <div class="card shadow mb-4">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.merchCategory) }}
            <div class="{% if app.session.get('language') != localeCs %}d-none{% endif %}">
                {{ form_row(form.nameCs) }}
            </div>
            <div class="{% if app.session.get('language') != localeDe %}d-none{% endif %}">
                {{ form_row(form.nameDe) }}
            </div>
            <div class="{% if app.session.get('language') != localeEn %}d-none{% endif %}">
                {{ form_row(form.nameEn) }}
            </div>
            {{ form_row(form.price) }}

            <div>
                <h5>Aktuální obrázek: </h5>
                <div class="row">
                    <div class="col-12 col-md-4 col-lg-3">
                        <img class="img-full" src="{{ asset(imageAssets ~ merch.imageFilename) }}" alt="Obrazek zboží">
                    </div>
                </div>
            </div>

            {{ form_row(form.image) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}