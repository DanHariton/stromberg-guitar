body
  font-family gothic-a1
  line-height 1.5

.text-westiva, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
  font-family westiva-medium

.h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6
  line-height 1.3

h1, .h1
  font-size 4rem
  line-height 1.4
  @media (max-width 768px)
    font-size 3.2rem
    line-height 1.3

h2, .h2
  font-size 2.5rem

h3, .h3
  font-size 2rem

h4, .h4
  font-size 1.75rem

h5, .h5
  font-size 1.5rem

h6, .h6
  font-size 1.25rem

.text-lead
  font-size 1.1rem

.text-bolder
  font-weight bolder

.text-two-column
  column-count 1
  column-gap 2em
  @media (min-width 992px)
    column-count 2