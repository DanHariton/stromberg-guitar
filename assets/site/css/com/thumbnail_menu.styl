.thumbnail-menu
  .element
    padding-bottom 56.25% // 16:9
    text-align center
    background-size cover
    background-repeat no-repeat
    position relative
    cursor pointer
    overflow hidden
    background-position center center
    .inner
      background-color rgba(0, 0, 0, 0.45)
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      padding-top 25%
      z-index: 1;

  .zoom-in, .zoom-out
    &::after
      content: ""
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background: inherit
      background-size: cover
      transform-origin: center
      transition: transform .4s ease-in-out

  .zoom-in
    &:focus, &:hover
      &::after
        transform scale(1.1)

  .zoom-out
    &::after
      transform scale(1.1)

    &:focus, &:hover
      &::after
        transform scale(1)


.thumbnail-menu.nav
  .element
    text-align left
    padding-bottom 30%
    .inner
      padding-left 2rem
      padding-top 0
  .nav-link
    padding 0
